{
  "name": "vsc-chat",
  "displayName": "VSC Chat",
  "description": "Peer-2-Peer authenticated chat intergrated into vscode.",
  "version": "0.0.1",
  "publisher": "notreeceharris",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
          "command": "vsc-chat.open",
          "key": "ctrl+alt+k",
          "mac": "cmd+alt+k"
      }
  ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsc-chat-panel-view",
          "title": "Chat (Ctrl+Shift+K)",
          "icon": "assets/icons/icon.svg"
        }
      ]
    },
    "views": {
      "vsc-chat-panel-view": [
        {
          "type": "webview",
          "id": "vsc-chat.panel",
          "name": "Chat (Ctrl+Shift+K)",
          "icon": "assets/icons/icon.svg",
          "contextualTitle": "Chat",
          "webviewId": "vsc-chat-panel-view"
        }
      ]
    },
    "commands": [
      {
        "command": "vsc-chat.logout",
        "title": "Logout",
        "category": "Chat",
        "icon": {
          "dark": "assets/icons/dark/log-out.svg",
          "light": "assets/icons/light/log-out.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vsc-chat.logout",
          "when": "view == vsc-chat.panel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "tw": "npx tailwindcss -i tailwind.css -o ./assets/style.min.css --watch --minify",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ejs": "^3.1.9"
  }
}
